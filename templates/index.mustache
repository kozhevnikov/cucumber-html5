<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <style type="text/css">
      .feature {
        border: 1px solid red;
        margin: 5px;
      }

      .scenario {
        border: 1px solid green;
        margin: 5px;
      }

      .description {
        white-space: pre;
      }
    </style>
  </head>
  <body>
    <main>
      {{#features}}
        <section class="feature">
          <header>
            <h1 class="name">{{name}}</h1>
            <p class="description">{{description}}</p>
          </header>
          {{#scenarios}}
            <article class="scenario">
              <h2 class="name">{{name}}</h2>
            </article>
          {{/scenarios}}
        </section>
      {{/features}}
    </main>
  </body>
</html>
