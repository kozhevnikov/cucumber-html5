<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
  </head>
  <body>
    <main>
      {{#features}}
        <section>
          <header>
            <h1>{{name}}</h1>
            <p>{{description}}</p>
          </header>
          {{#scenarios}}
            <article>
              <header>
                <h2>{{name}}</h2>
                <p>{{description}}</p>
              </header>
              <ol>
                {{#steps}}
                  <li>{{name}}</li>
                {{/steps}}
              </ol>
            </article>
          {{/scenarios}}
        </section>
      {{/features}}
    </main>
  </body>
</html>
